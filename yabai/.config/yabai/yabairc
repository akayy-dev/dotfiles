yabai -m config layout bsp

yabai -m config --space 5 layout float # Fifth space floats window.


yabai -m config window_placement second_child

# Gaps
yabai -m config top_padding 16
yabai -m config bottom_padding 16
yabai -m config left_padding 16
yabai -m config right_padding 16
yabai -m config window_gap 8

# Mouse settings
yabai -m config mouse_follows_focus on

# Keep windows from automatically resizing themselves.
yabai -m config auto_balance off


# If i drag a window on top of another window, swap their positions
# yabai -m mouse_drop_action swap

# Floating window on top
yabai -m config window_topmost on

# Disable tiling for certain apps
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Hyperkey$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="App Store" manage=off
yabai -m rule --add app="^Karabiner-Elements$" manage=off
yabai -m rule --add app="TorGuard" manage=off
yabai -m rule --add app="^Raycast$" manage=off
yabai -m rule --add app="^Steam$" manage=off
yabai -m rule --add app="^LuLu$" manage=off
yabai -m rule --add app="^Reminders$" manage=off

